<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:background="@color/select_list_item_background"
    android:orientation="horizontal"
    >
    
	<FrameLayout android:id="@+id/select_list_item_poster" 
		android:layout_width="@dimen/select_list_item_poster_width" 
		android:layout_height="@dimen/select_list_item_poster_height"
		android:layout_margin="@dimen/select_list_item_poster_margin" 
		android:background="@color/select_list_item_poster_background"
	  	>
	  	
		<ImageView android:id="@+id/select_list_item_poster_icon" 
			android:layout_width="@dimen/select_list_item_icon_width" 
			android:layout_height="@dimen/select_list_item_icon_height"
			android:layout_gravity="center"
			android:src="@drawable/ic_type_blank"
	     	/>
	    
		<ImageView android:id="@+id/select_list_item_poster_image" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="gone"
	     	/>
		
	</FrameLayout>
    
	<LinearLayout android:id="@+id/select_list_item_body" 
		android:layout_width="0dp" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
	  	>
	      
	    <TextView android:id="@+id/select_list_item_title" 
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="@dimen/select_list_item_title_margintop" 
	    	android:layout_marginLeft="@dimen/select_list_item_title_marginleft" 
	    	android:layout_marginBottom="@dimen/select_list_item_title_marginbottom" 
	    	android:layout_marginRight="@dimen/select_list_item_title_marginright" 
	    	android:textSize="@dimen/select_list_item_title_size" 
	    	android:textStyle="normal" 
	    	android:textColor="@color/select_list_item_title_color" 
	    	android:ellipsize="end"
	    	android:singleLine="false" 
	    	android:maxLines="2"
	    	/>
	    
	    <TextView android:id="@+id/select_list_item_subtitle" 
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="@dimen/select_list_item_subtitle_margintop" 
	    	android:layout_marginLeft="@dimen/select_list_item_subtitle_marginleft" 
	    	android:layout_marginBottom="@dimen/select_list_item_subtitle_marginbottom" 
	    	android:layout_marginRight="@dimen/select_list_item_subtitle_marginright" 
	    	android:textSize="@dimen/select_list_item_subtitle_size" 
	    	android:textStyle="normal" 
	    	android:textColor="@color/select_list_item_subtitle_color" 
	    	android:singleLine="false" 
	    	/>
	    
	</LinearLayout>

</LinearLayout>