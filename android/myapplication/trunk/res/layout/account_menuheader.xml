<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
	android:id="@+id/accountmenu_header"
    >
    
	<LinearLayout 
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:layout_gravity="bottom"
		android:orientation="vertical"
	  	>
	  	
	    <FrameLayout android:id="@+id/accountmenu_header_header" 
			android:layout_width="match_parent" 
			android:layout_height="@dimen/accountmenu_header_height"
			android:layout_margin="@dimen/accountmenu_header_margin"
	        >
	        
	        <ImageView android:id="@+id/accountmenu_item_header_image" 
				android:layout_width="match_parent" 
				android:layout_height="match_parent"
				android:scaleType="centerCrop"
				android:visibility="gone"
	            />
		    
	    </FrameLayout>
	    
	    <FrameLayout android:id="@+id/accountmenu_header_body" 
			android:layout_width="match_parent" 
	    	android:layout_height="@dimen/accountmenu_body_height" 
	    	android:background="@drawable/bg_account_menubottom"
	        >
	        
			<LinearLayout 
				android:layout_width="match_parent" 
				android:layout_height="match_parent"
				android:orientation="vertical"
			  	>
	        
			    <TextView android:id="@+id/accountmenu_header_title" 
			    	android:layout_width="match_parent" 
			    	android:layout_height="wrap_content" 
			    	android:layout_marginTop="@dimen/accountmenu_title_margintop" 
			    	android:layout_marginLeft="@dimen/accountmenu_title_marginleft" 
			    	android:layout_marginBottom="@dimen/accountmenu_title_marginbottom" 
			    	android:layout_marginRight="@dimen/accountmenu_title_marginright" 
			    	android:textSize="@dimen/accountmenu_title_textsize" 
			    	android:textColor="@color/accountmenu_title_color" 
			    	android:textStyle="bold" 
			    	android:singleLine="true" 
			    	android:shadowColor="#ffffffff"
			    	android:shadowRadius="1"
			    	android:shadowDx="1"
			    	android:shadowDy="1"
			    	/>
			    
			    <TextView android:id="@+id/accountmenu_header_subtitle" 
			    	android:layout_width="match_parent" 
			    	android:layout_height="wrap_content" 
			    	android:layout_marginTop="@dimen/accountmenu_subtitle_margintop" 
			    	android:layout_marginLeft="@dimen/accountmenu_subtitle_marginleft" 
			    	android:layout_marginBottom="@dimen/accountmenu_subtitle_marginbottom" 
			    	android:layout_marginRight="@dimen/accountmenu_subtitle_marginright" 
			    	android:textSize="@dimen/accountmenu_subtitle_textsize" 
			    	android:textColor="@color/accountmenu_subtitle_color" 
			    	android:textStyle="normal" 
			    	android:lineSpacingExtra="1px"
			    	android:lineSpacingMultiplier="1"
			    	android:singleLine="false" 
			    	android:maxLines="3"
			    	android:shadowColor="#ffffffff"
			    	android:shadowRadius="1"
			    	android:shadowDx="1"
			    	android:shadowDy="1"
			    	/>
			    
	        </LinearLayout>
		    
	    </FrameLayout>
	    
	</LinearLayout>
	
    <FrameLayout android:id="@+id/accountmenu_header_avatar" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="left|bottom"
		android:layout_marginLeft="@dimen/accountmenu_avatar_marginleft"
		android:layout_marginTop="@dimen/accountmenu_avatar_margin"
		android:layout_marginRight="@dimen/accountmenu_avatar_margin"
		android:layout_marginBottom="@dimen/accountmenu_avatar_marginbottom"
        >
        
        <ImageView android:id="@+id/accountmenu_header_avatar_image" 
			android:layout_width="@dimen/accountmenu_avatar_size" 
			android:layout_height="@dimen/accountmenu_avatar_size"
			android:layout_gravity="center"
			android:padding="@dimen/accountmenu_avatar_padding"
			android:scaleType="fitCenter"
            />
	    
    </FrameLayout>
	
</FrameLayout>