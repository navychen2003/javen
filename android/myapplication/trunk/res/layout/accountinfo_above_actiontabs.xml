<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
   	android:layout_height="wrap_content" 
   	android:isScrollContainer="true"
   	android:orientation="horizontal"
    >
    
    <View android:layout_height="wrap_content"
        android:layout_width="@dimen/accountinfo_list_margin"
        />
    
	<org.javenstudio.cocoka.widget.ActionTabLayout 
	    android:id="@+id/accountinfo_above_actions" 
		android:layout_width="0dp" 
		android:layout_weight="1"
		android:layout_height="@dimen/accountinfo_action_height" 
		android:background="@color/accountinfo_actions_background"
		android:orientation="horizontal"
	  	/>
    
	<View android:layout_height="wrap_content"
        android:layout_width="@dimen/accountinfo_list_margin"
        />
	
</LinearLayout>