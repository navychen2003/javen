<?xml version="1.0" encoding="utf-8"?>

<org.javenstudio.android.setting.SettingListItem 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="@dimen/setting_action_height"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    >
    
    <TextView android:id="@+id/setting_child_title" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
	    android:gravity="center_horizontal|center_vertical"
        android:textSize="@dimen/setting_title_size" 
        android:textStyle="normal" 
        android:textColor="@color/setting_title_color" 
        android:ellipsize="marquee" 
        android:singleLine="true" 
        />

</org.javenstudio.android.setting.SettingListItem>