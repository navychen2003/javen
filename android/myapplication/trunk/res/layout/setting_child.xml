<?xml version="1.0" encoding="utf-8"?>

<org.javenstudio.android.setting.SettingListItem 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="@dimen/setting_item_height"
    android:orientation="horizontal"
    >
    
    <ImageView android:id="@+id/setting_child_image" 
        android:layout_width="@dimen/setting_icon_size" 
        android:layout_height="@dimen/setting_icon_size" 
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/setting_icon_marginleft" 
        />
    
    <TextView android:id="@+id/setting_child_title" 
        android:layout_width="0dp" 
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/setting_title_marginleft" 
        android:layout_marginRight="@dimen/setting_title_marginright" 
        android:textSize="@dimen/setting_title_size" 
        android:textStyle="normal" 
        android:textColor="@color/setting_title_color" 
        android:ellipsize="marquee" 
        android:singleLine="true" 
        />
    
    <TextView android:id="@+id/setting_child_summary" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/setting_summary_marginright" 
        android:textSize="@dimen/setting_summary_size" 
        android:textStyle="normal" 
        android:textColor="@color/setting_summary_color" 
        android:ellipsize="marquee" 
        android:singleLine="true" 
        />
    
    <LinearLayout android:id="@+id/setting_child_rightlayout" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/setting_right_marginright" 
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        >

        <TextView android:id="@+id/setting_child_righttext" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:textSize="@dimen/setting_righttext_size" 
            android:textStyle="normal" 
            android:textColor="@color/setting_righttext_color" 
            android:ellipsize="marquee" 
            android:singleLine="true" 
            android:visibility="gone"
            />
        
        <FrameLayout android:id="@+id/setting_child_rightbutton" 
            android:layout_width="@dimen/setting_button_width" 
	        android:layout_height="@dimen/setting_button_width" 
            >
            
	        <ImageView android:id="@+id/setting_child_rightimage" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:layout_gravity="center"
	            />
        </FrameLayout>
        
    </LinearLayout>

</org.javenstudio.android.setting.SettingListItem>