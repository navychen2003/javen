	android:layout_height="wrap_content"
  	>
  	
    <TextView android:id="@+id/section_dropdown_item_title" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_marginTop="@dimen/section_dropdown_category_margintop" 
    	android:layout_marginLeft="@dimen/section_dropdown_category_marginleft" 
    	android:layout_marginBottom="@dimen/section_dropdown_category_marginbottom" 
    	android:layout_marginRight="@dimen/section_dropdown_category_marginright" 
    	android:textSize="@dimen/section_dropdown_category_textsize" 
    	android:textStyle="normal" 
    	android:textColor="@color/section_dropdown_category_textcolor" 
    	android:textAllCaps="true"
    	android:singleLine="true" 
    	/>
    
</LinearLayout>