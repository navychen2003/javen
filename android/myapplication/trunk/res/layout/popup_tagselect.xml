<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#88eeeeee"
    android:orientation="vertical"
    >
    
	<TextView android:id="@+id/popup_tagselect_title" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="4dp"
	    android:gravity="center_vertical|center_horizontal"
	    android:textColor="#ff888888"
	    android:textSize="16sp"
	    android:ellipsize="marquee" 
	    android:singleLine="true" 
		/>
    
	<GridView android:id="@+id/popup_tagselect_layout" 
	 	android:layout_width="wrap_content" 
	 	android:layout_height="wrap_content" 
	 	android:layout_marginLeft="4.0px"
	 	android:layout_marginRight="4.0px"
	 	android:layout_marginBottom="4.0px"
	 	android:verticalSpacing="4.0px"
	 	android:horizontalSpacing="4.0px"
	 	android:numColumns="@integer/tagselect_column_size"
    	android:cacheColorHint="#00000000" 
    	android:listSelector="#00000000" 
	 	/>
	
</LinearLayout>
