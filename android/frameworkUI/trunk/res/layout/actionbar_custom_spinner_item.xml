<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/abs__spinner_ab_holo_light"
    android:paddingLeft="@dimen/action_bar_list_item_paddingleft"
	android:paddingRight="@dimen/action_bar_list_item_paddingright"
    android:minHeight="@dimen/action_bar_list_item_minheight"
    android:orientation="horizontal"
	android:enabled="false" 
	>

	<LinearLayout 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:orientation="vertical" 
        >
        
		<TextView android:id="@+id/actionbar_custom_item_title" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="@style/ActionBar.Title"
		    android:gravity="center_vertical|left"
    		android:paddingLeft="0dp"
			android:paddingRight="16dp"
		    android:ellipsize="marquee" 
		    android:singleLine="true" 
			/>
        
        <TextView android:id="@+id/actionbar_custom_item_subtitle" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="@style/ActionBar.Subtitle" 
		    android:gravity="center_vertical|left"
    		android:paddingLeft="0dp"
			android:paddingRight="8dp"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:visibility="gone" 
	        />
        
    </LinearLayout>
</LinearLayout>