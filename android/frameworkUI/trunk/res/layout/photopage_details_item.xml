<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photopage_details_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_margin="@dimen/photo_details_item_margin"
    android:background="@color/photo_comments_background"
    android:orientation="horizontal"
    >
    
	<TextView android:id="@+id/photopage_details_item_name" 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="3"
	    android:paddingRight="@dimen/photo_details_item_name_paddingright"
	    android:textAppearance="@style/ActionBar.Title"
	    android:textColor="@color/photo_details_item_name_textcolor"
	    android:textSize="@dimen/photo_details_item_name_textsize"
	    android:textStyle="normal"
	    android:gravity="right|top"
	    android:ellipsize="marquee" 
	    android:singleLine="true" 
		/>
    
	<TextView android:id="@+id/photopage_details_item_value" 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="7"
	    android:paddingLeft="@dimen/photo_details_item_value_paddingleft"
	    android:textAppearance="@style/ActionBar.Title"
	    android:textColor="@color/photo_details_item_value_textcolor"
	    android:textSize="@dimen/photo_details_item_value_textsize"
	    android:textStyle="normal"
	    android:gravity="left|top"
	    android:singleLine="false" 
		/>
	
</LinearLayout>