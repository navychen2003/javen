<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_holo_light"
    android:orientation="horizontal"
    >
    
	<LinearLayout android:id="@+id/login_accountitem_user" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:orientation="vertical"
	  	>
	  	
		<ImageView android:id="@+id/login_accountitem_user_avatar" 
			android:layout_width="@dimen/login_accountitem_avatar_size" 
			android:layout_height="@dimen/login_accountitem_avatar_size"
			android:layout_margin="@dimen/login_accountitem_avatar_margin" 
			android:layout_gravity="center"
			android:padding="@dimen/login_accountitem_avatar_padding"
			android:scaleType="fitCenter"
	     	/>
	    
	</LinearLayout>
      
	<LinearLayout android:id="@+id/login_accountitem_body" 
		android:layout_width="0dp" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
	  	>
	      
	    <TextView android:id="@+id/login_accountitem_title" 
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="@dimen/login_accountitem_title_margintop" 
	    	android:layout_marginLeft="@dimen/login_accountitem_title_marginleft" 
	    	android:layout_marginBottom="@dimen/login_accountitem_title_marginbottom" 
	    	android:layout_marginRight="@dimen/login_accountitem_title_marginright" 
	    	android:textSize="@dimen/login_accountitem_title_size" 
	    	android:textStyle="normal" 
	    	android:textColor="@color/login_accountitem_title_color" 
	    	android:singleLine="false" 
	    	android:maxLines="3"
	    	/>
	    
	    <TextView android:id="@+id/login_accountitem_text" 
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content" 
	    	android:layout_marginTop="@dimen/login_accountitem_subtitle_margintop" 
	    	android:layout_marginLeft="@dimen/login_accountitem_subtitle_marginleft" 
	    	android:layout_marginBottom="@dimen/login_accountitem_subtitle_marginbottom" 
	    	android:layout_marginRight="@dimen/login_accountitem_subtitle_marginright" 
	    	android:textSize="@dimen/login_accountitem_subtitle_size" 
	    	android:textStyle="normal" 
	    	android:textColor="@color/login_accountitem_subtitle_color" 
	    	android:singleLine="false" 
	    	/>
	    
	</LinearLayout>

	<LinearLayout android:id="@+id/login_accountitem_action" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="right|center_vertical"
		android:layout_marginLeft="@dimen/login_accountitem_action_marginleft" 
	    android:layout_marginRight="@dimen/login_accountitem_action_marginright"
		android:orientation="vertical"
	  	>
	  	
		<ImageView android:id="@+id/login_accountitem_action_image" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="right|center_vertical"
			android:background="@drawable/login_account_action_selector" 
	     	/>
	    
	</LinearLayout>
	
</LinearLayout>