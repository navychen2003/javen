<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:orientation="vertical"
  	>
  	
	<ImageView android:id="@+id/dashboard_empty_image" 
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|top"
		android:layout_marginTop="@dimen/dashboard_empty_image_margintop"
		android:layout_marginBottom="@dimen/dashboard_empty_image_marginbottom"
		android:layout_marginLeft="@dimen/dashboard_empty_image_marginleft"
		android:layout_marginRight="@dimen/dashboard_empty_image_marginright"
		android:scaleType="fitCenter"
		android:visibility="gone"
		/>
    
    <TextView android:id="@+id/dashboard_empty_title" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_gravity="center_horizontal|top"
    	android:gravity="center_horizontal|top"
    	android:layout_marginTop="@dimen/dashboard_empty_title_margintop"
		android:layout_marginBottom="@dimen/dashboard_empty_title_marginbottom"
		android:layout_marginLeft="@dimen/dashboard_empty_title_marginleft"
		android:layout_marginRight="@dimen/dashboard_empty_title_marginright"
    	android:textSize="@dimen/dashboard_empty_title_textsize" 
    	android:textStyle="normal" 
    	android:textColor="@color/dashboard_empty_title_color" 
    	android:singleLine="true" 
    	/>
    
    <TextView android:id="@+id/dashboard_empty_subtitle" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_gravity="center_horizontal|top"
    	android:gravity="left|top"
    	android:layout_marginTop="@dimen/dashboard_empty_subtitle_margintop"
		android:layout_marginBottom="@dimen/dashboard_empty_subtitle_marginbottom"
		android:layout_marginLeft="@dimen/dashboard_empty_subtitle_marginleft"
		android:layout_marginRight="@dimen/dashboard_empty_subtitle_marginright"
    	android:textSize="@dimen/dashboard_empty_subtitle_textsize" 
    	android:textStyle="normal" 
    	android:textColor="@color/dashboard_empty_subtitle_color" 
    	android:singleLine="false" 
    	android:visibility="gone"
    	/>
    
    <TextView android:id="@+id/dashboard_empty_next" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_gravity="right|top"
    	android:gravity="center_horizontal|top"
    	android:layout_marginTop="@dimen/dashboard_empty_next_margintop"
		android:layout_marginBottom="@dimen/dashboard_empty_next_marginbottom"
		android:layout_marginLeft="@dimen/dashboard_empty_next_marginleft"
		android:layout_marginRight="@dimen/dashboard_empty_next_marginright"
		android:padding="@dimen/dashboard_empty_next_padding"
    	android:textSize="@dimen/dashboard_empty_next_textsize" 
    	android:textStyle="italic" 
    	android:textColor="@color/dashboard_next_color" 
    	android:singleLine="true" 
    	android:visibility="gone"
    	/>
    
    <TextView android:id="@+id/dashboard_empty_action" 
    	android:layout_width="@dimen/dashboard_empty_action_width" 
    	android:layout_height="@dimen/dashboard_empty_action_height" 
    	android:layout_gravity="center_horizontal|top"
    	android:gravity="center"
    	android:layout_marginTop="@dimen/dashboard_empty_action_margintop"
    	android:padding="@dimen/dashboard_empty_action_padding"
		android:background="@drawable/action_round_selector"
    	android:textSize="@dimen/dashboard_empty_action_textsize" 
    	android:textStyle="normal" 
    	android:textColor="@color/dashboard_action_color" 
    	android:textAllCaps="true"
    	android:singleLine="true" 
    	android:visibility="gone"
    	/>
    
</LinearLayout>